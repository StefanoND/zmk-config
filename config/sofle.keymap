#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/outputs.h>

// For a list of available locales, check the link below
// https://github.com/joelspadin/zmk-locales/tree/main/include/locale
#include <locale/keys_pt.h>

#define BASE   0
#define LOWER  1
#define RAISE  2
#define ADJUST 3

//Encoder Support
//Alps Alpine EC11N1524402: 30 Detent, 15PPR, 2 Channel, Quadrature, 15000 Cycle
/ {
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        label = "LEFT_ENCODER";
        a-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <40>;
    };
    right_encoder: encoder_right {
        compatible = "alps,ec11";
        label = "RIGHT_ENCODER";
        a-gpios = <&pro_micro 21 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        b-gpios = <&pro_micro 20 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
        steps = <40>;
    };
    sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&left_encoder &right_encoder>;
        triggers-per-rotation = <20>;
    };
};

/ {
   // Activate ADJUST layer by pressing raise and lower
    conditional_layers {
        compatible = "zmk,conditional-layers";
        adjust_layer {
            if-layers = <LOWER RAISE>;
            then-layer = <ADJUST>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "default";
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2   |  3   |   4   |   5   |                      |   6   |   7   |   8   |  9   |  0  |   '   |
            // |   \   |  Q  |  W   |  E   |   R   |   T   |                      |   Y   |   U   |   I   |  O   |  P  | BKSPC |
            // |  TAB  |  A  |  S   |  D   |   F   |   G   |                      |   H   |   J   |   K   |  L   |  ç  |   ~   |
            // | SHIFT |  Z  |  X   |  C   |   V   |   B   |   MUTE  |  |  PLAY   |   N   |   M   |   ,   |  .   |  -  |   <   |
            //               | CTRL | META |  ALT  | SPACE |  LOWER  |  |  RAISE  | ENTER |   º   |  ALT  | CTRL |
            bindings = <
&kp ESC      &kp N1  &kp N2     &kp N3    &kp N4    &kp N5                            &kp N6   &kp N7       &kp N8        &kp N9      &kp N0            &kp PT_SQT
&kp PT_BSLH  &kp Q   &kp W      &kp E     &kp R     &kp T                             &kp Y    &kp U        &kp I         &kp O       &kp P             &kp BSPC
&kp TAB      &kp A   &kp S      &kp D     &kp F     &kp G                             &kp H    &kp J        &kp K         &kp L       &kp PT_C_CEDILLA  &kp PT_TILDE
&kp LSHFT    &kp Z   &kp X      &kp C     &kp V     &kp B      &kp C_MUTE  &kp C_PP   &kp N    &kp M        &kp PT_COMMA  &kp PT_DOT  &kp PT_MINUS      &kp PT_LT
                     &kp LCTRL  &kp LGUI  &kp LALT  &kp SPACE  &mo LOWER   &mo RAISE  &kp RET  &kp PT_ORDM  &kp RALT      &kp RCTRL
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp PG_DN PG_UP>;
        };

        lower_layer {
            display-name = "lower";
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1 |  F2 |  F3  |  F4  |  F5  |                   |  F6  |  F7   |  F8   |  F9  |  F10  |   «   |
            // |       |     |     |   {  |   [  |  (   |                   |  )   |   ]   |   }   |  F11 |  F12  |  DEL  |
            // |       |     |     |      |      |  &   |                   |  *   |   #   |       |      |       |       |
            // |       |     |     |      |      |      |        |  |       |      |       |       |      |       |       |
            //               |     |      |      |      |        |  |       |      |       |       |      |
            bindings = <
&trans  &kp F1  &kp F2  &kp F3       &kp F4       &kp F5                       &kp F6       &kp F7       &kp F8       &kp F9   &kp F10  &kp PT_LAQUO
&trans  &trans  &trans  &kp PT_LBRC  &kp PT_LBKT  &kp PT_LPAR                  &kp PT_RPAR  &kp PT_LBKT  &kp PT_RBRC  &kp F11  &kp F12  &kp DEL
&trans  &trans  &trans  &trans       &trans       &kp PT_AMPS                  &kp PT_STAR  &kp PT_HASH  &trans       &trans   &trans   &trans
&trans  &trans  &trans  &trans       &trans       &trans       &trans  &trans  &trans       &trans       &trans       &trans   &trans   &trans
                &trans  &trans       &trans       &trans       &trans  &trans  &trans       &trans       &trans       &trans
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_NEXT C_PREV>;
        };

        raise_layer {
            display-name = "raise";
            // ------------------------------------------------------------------------------------------------------------
            // |       |  F1  |  F2  |  F3   |  F4   |  F5  |                |  F6  |  F7  |  F8   |  F9  |  F10  |  F11  |
            // |       | INS  | PSCR | GUI   |       |      |                | PGUP | HOME |   ^   | END  |       |       |
            // |       | ALT  | CTRL | SHIFT |       | CAPS |                | PGDN |   <- |   v   |  ->  |  DEL  | BKSPC |
            // |       | UNDO | CUT  | COPY  | PASTE |      |      |  |      |      |      |       |      |       |       |
            //                |      |       |       |      |      |  |      |      |      |       |      |
            bindings = <
&none   &kp F1      &kp F2     &kp F3       &kp F4       &kp F5                    &kp F6     &kp F7    &kp F8    &kp F9     &kp F10  &kp F11
&trans  &kp INS     &kp PSCRN  &kp K_CMENU  &trans       &trans                    &kp PG_UP  &kp HOME  &kp UP    &kp END    &kp N0   &trans
&trans  &kp LALT    &kp LCTRL  &kp LSHFT    &trans       &kp CLCK                  &kp PG_DN  &kp LEFT  &kp DOWN  &kp RIGHT  &kp DEL  &kp BSPC
&trans  &kp K_UNDO  &kp K_CUT  &kp K_COPY   &kp K_PASTE  &trans    &trans  &trans  &trans     &trans    &trans    &trans     &trans   &trans
                    &trans     &trans       &trans       &trans    &trans  &trans  &trans     &trans    &trans    &trans
            >;
            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_NEXT C_PREV>;
        };

        adjust_layer {
            display-name = "adjust";
            // ----------------------------------------------------------------------------------------------------------------------------
            // | BTCLR    |  BT1    |  BT2    |   BT3   |   BT4   |   BT5   |                  | OUT_TOG |      |       |      |       |       |
            // | EXTPWR   | HUEDEC  | HUEINC  | SATDEC  | SATINC  | EFFECT+ |                  | OUT_USB |      |       |      |       |       |
            // |          | BRITDEC | BRITINC |         |         | EFFECT- |                  | OUT_BLE |      |       |      |       |       |
            // | BTCLRALL |         |         |         |         |         | RGB_TOG | |      |         |      |       |      |       |       |
            //                      |         |         |         |         |         | |      |         |      |       |      |
            bindings = <
&bt BT_CLR        &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3    &bt BT_SEL 4                             &out OUT_TOG  &none   &none   &none   &none  &none
&ext_power EP_TOG &rgb_ug RGB_HUD &rgb_ug RGB_HUI &rgb_ug RGB_SAD &rgb_ug RGB_SAI &rgb_ug RGB_EFF                          &out OUT_USB  &none   &none   &none   &none  &none
&none             &rgb_ug RGB_BRD &rgb_ug RGB_BRI &none           &none           &rgb_ug RGB_EFR                          &out OUT_BLE  &none   &none   &none   &none  &none
&bt BT_CLR_ALL    &none           &none           &none           &none           &none            &rgb_ug RGB_TOG &none   &none         &none   &none   &none   &none  &none
                                  &trans          &trans          &trans          &trans           &trans          &trans  &trans        &trans  &trans  &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_DN C_VOL_UP &inc_dec_kp C_NEXT C_PREV>;
        };
    };
};


